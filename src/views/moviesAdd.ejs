<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>

<div class="container mt-5">
    <div class="text-center">
        <img src="/img/logo-DH.png" alt="Logo Digital House" class="img-fluid mb-4">
        <h1 class="title text-danger-emphasis">Agregar Película</h1>
    </div>
    <section>
        <form action="/movies/create" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label text-danger-emphasis">Titulo</label>
                <input type="text" class="form-control" name="title" id="title" required>
            </div>
            <div class="mb-3">
                <label for="rating" class="form-label text-danger-emphasis">Calificación</label>
                <input type="number" class="form-control" name="rating" id="rating" required>
            </div>
            <div class="mb-3">
                <label for="awards" class="form-label text-danger-emphasis">Premios</label>
                <input type="number" class="form-control" name="awards" id="awards" required>
            </div>
            <div class="mb-3">
                <label for="release_date" class="form-label text-danger-emphasis">Fecha de creación</label>
                <input type="date" class="form-control" name="release_date" id="release_date" required>
            </div>
            <div class="mb-3">
                <label for="length" class="form-label text-danger-emphasis">Duración</label>
                <input type="number" class="form-control" name="length" id="length" required>
            </div>
            <div class="mb-3">
                <label for="genreID" class="form-label text-danger-emphasis">Género</label>
                <select class="form-select" name="genre_id" id="genreID" required>
                    <option value="" disabled selected>- Seleccione el género -</option>
                    <% allGenres.forEach(genre => { %>
                        <option value="<%= genre.id %>"><%= genre.name %></option>
                    <% }); %>
                </select>
            </div>
            <div class="mb-3">
                <button class="btn btn-outline-light" type="submit">Agregar</button>
                <a class="btn btn-light" href="/movies">Listado de Películas</a>
            </div>
        </form>
    </section>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
